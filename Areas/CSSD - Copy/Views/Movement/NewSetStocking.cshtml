
@{
	ViewBag.Title = "NewSetStocking";
	Layout = "~/Views/Shared/_layout.cshtml";
}

<script src="~/Areas/CSSD/JsModule/Movement/NewSetStocking.js"></script>
<style>
	.btn-close {
		right: 5px;
		opacity: 100%;
		position: absolute;
		color: #fff !important;
		font-weight: bold;
		font-size: 12px;
		padding: 0px 6px;
		background: #b92c02;
		height: 16px;
		border-radius: 2px;
		cursor: pointer;
	}

	.flex {
		display: flex !important;
		align-items: center;
	}

	hr {
		margin-top: 35px;
		margin-bottom: 5px;
		border: 0;
		border-top: 1px solid #eee;
	}

	.custom-table {
		width: 100%;
		line-height: 29px;
		font-size: 12px;
	}

	.fileinput.input-group {
		display: flex;
	}

	.text-17 {
		font-size: 17px;
	}

	.btn-flat {
		padding: 2px;
		border: none;
	}

	.scroll {
		width: 100%;
		background: #fff;
		overflow: overlay;
		max-height: 450px;
		display: block;
	}

	.panel-body {
		/*box-shadow: 1px 1px 10px #d2d2d2;*/
		border-radius: 10px;
		/*padding: 5px 3px 0px 3px;*/
		position: relative;
	}

	.note {
		list-style: disc;
		color: red;
		font-size: 11px;
		font-weight: bold;
		background: #f7f7f7;
		border: 1px solid #d86c6c;
	}

	.bn {
		margin: 0px;
		font-size: 10pt;
		padding: 0px 10px;
		border-radius: 0;
		text-align: left;
		height: 30px;
	}

	.bc {
		border: 1px solid #00a65a;
		border-radius: 0;
	}
</style>
<div id="page-content">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="ml15">
					<div class="">
						<div class="panel">
							<div class="panel-heading" style="background:#0076d0;padding: 4px;">
								<h4 class="text-white">New Set Stocking List</h4>
							</div>
							<div class="panel-body">
								<div class="row">
									<div class="col-md-5">
										<div class="form-group flex bc">
											<button class="btn btn-success bn" style="width: 36%;">Set Type</button>
											<select id="ddlSetType" class="form-control bn" onchange="GeSetInfo()">
												<option value="SET">Select</option>
												<option value="SET">SET</option>
												<option value="CONSUMABLE">CONSUMABLE</option>
											</select>										
										</div>
									</div>
									<div class="col-md-7">
										<div class="form-group flex bc">
											<button class="btn btn-success bn" style="width: 23%;">Set Name</button>
											<select id="ddlSetName" class="form-control bn" onchange="GetStockingInfo()"><option>Select</option></select>
											<span id="txtSetId" style="display:none"></span>
										</div>
									</div>
									<div class="col-md-5">
										<div class="form-group flex bc">
											<button class="btn btn-success bn" style="width:50%;">Batch No</button>
											<input type="text" id="txtBatchNo" class="form-control text-uppercase bn" autocomplete="off" placeholder="Batch No" />
											<button class="btn btn-warning bn" onclick="AutoGenBatchNo()" style="width: 40%;font-size: 11px;">Auto Gen</button>
										</div>
									</div>
									<div class="col-md-4">
										<div class="form-group flex bc">
											<button class="btn btn-success bn" style="width: 51%;font-size: 11px;">Exp. Date</button>
											<input type="date" id="txtExpDate" style="padding: 5px;" class="form-control text-uppercase bn" />
										</div>
									</div>
									<div class="col-md-3">
										<div class="form-group flex bc">
											<button class="btn btn-success bn" style="width: 36%;font-size: 11px;">Qty</button>
											<input type="text" id="txtQty" placeholder="Qty" autocomplete="off" data-int class="form-control text-right bn" />
											<button type="button" id="btnSave" onclick="NewSetStocking()" class="btn bn btn-warning pull-right" style="border:none;width:32%"><i class="fa fa-sign-in font-size-15">&nbsp;</i></button>
										</div>
									</div>
								</div>							
								<div class="example-box-wrapper">
									<div class="form-horizontal bordered-row">
										<div class="table table-responsive">
											<div class="scroll">
												<span data-itemname style="display:none"></span>
												<span data-itemid style="display:none"></span>
												<table id="tblStockInfo" class="table table-bordered">
													<thead>
														<tr>
														
															<th style="width:10%">Set Id</th>
															<th style="width:40%">Set Name</th>
															<th style="width:20%">Last Batch No</th>
															<th style="width:15%">Last Exp. Date</th>
															<th style="width:14%">Last Status</th>
															<th style="width:5%;text-align:right">Qty</th>
														</tr>
													</thead>
													<tbody></tbody>
												</table>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>			
		</div>
	</div>
</div>

