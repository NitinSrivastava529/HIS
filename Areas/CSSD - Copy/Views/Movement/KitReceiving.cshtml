
@{
	ViewBag.Title = "KitReceiving";
	Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/CSSD/JsModule/Movement/KitReceiving.js"></script>
<style>
	.bg1 {
		background: #ffc1c1;
	}

	.bg2 {
		background: #e2efff;
	}

	.btn-close {
		right: 5px;
		opacity: 100%;
		position: absolute;
		color: #fff !important;
		font-weight: bold;
		font-size: 12px;
		padding: 0px 6px;
		background: #b92c02;
		height: 16px;
		border-radius: 2px;
		cursor: pointer;
	}

	.flex {
		display: flex !important;
		align-items: center;
	}

	hr {
		margin-top: 35px;
		margin-bottom: 5px;
		border: 0;
		border-top: 1px solid #eee;
	}

	.custom-table {
		width: 100%;
		line-height: 29px;
		font-size: 12px;
	}

	.fileinput.input-group {
		display: flex;
	}

	.text-17 {
		font-size: 17px;
	}

	.btn-flat {
		padding: 2px;
		border: none;
	}

	.scroll {
		width: 100%;
		background: #fff;
		overflow: overlay;
		max-height: 450px;
		display: block;
	}

	.panel-body {
		/*box-shadow: 1px 1px 10px #d2d2d2;*/
		border-radius: 10px;
		padding: 5px 3px 0px 3px;
		position: relative;
	}

	.note {
		list-style: disc;
		color: red;
		font-size: 11px;
		font-weight: bold;
		background: #f7f7f7;
		border: 1px solid #d86c6c;
	}

	.bn {
		margin: 0px;
		font-size: 10pt;
		padding: 0px 10px;
		border-radius: 0;
		text-align: left;
		height: 30px;
	}

	.bc {
		border: 1px solid #00a65a;
		border-radius: 0;
	}
</style>
<div id="page-content">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="">
					<div class="">
						<div class="panel">
							<div class="panel-heading" style="background:#0076d0;padding: 4px;">							
								<h4 class="text-white">Kit Receiving</h4>
							</div>
							<div class="panel-body" style="background:#fff;">
								<div class="row">
									<div class="col-md-6">
										<div class="form-group flex bc">
											<button class="btn btn-success bn" style="width:30%;"><i class="fa fa-shopping-cart ">&nbsp;&nbsp;</i>Cart</button>
											<select id="ddlCart" onchange="GetIndentForReceiving()" class="form-control bn"></select>
										</div>
									</div>								
									<div class="col-md-12">
										<div class="scroll">
											<table class="table table-bordered" id="tblIndentInfo" style="padding-bottom: 7px;display: block;border: 1px solid #009688;max-height:400px;overflow:auto">
												<thead>
													<tr>
														<th style="width:1%">SR.No</th>
														<th style="width:10%">Set Id</th>
														<th>Set Name</th>
														<th>Batch No</th>
														<th>Expiry</th>
														<th style="width:11%;text-align:right;padding-right:10px">Cart Stock</th>
														<th style="width:10%;text-align:right;padding-right:10px">Req. Qty</th>
														@*<th style="width:12%">Action</th>*@
													</tr>
												</thead>
												<tbody></tbody>
											</table>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

